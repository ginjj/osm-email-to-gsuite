# Google Workspace Configuration

# Your Google Workspace domain (e.g., example.com)
domain: example.com

# Authentication method: 'oauth' or 'service_account'
# - oauth: Interactive browser-based authentication (recommended for local development)
# - service_account: Non-interactive authentication (recommended for production/automation)
auth_method: oauth

# OAuth 2.0 Credentials File
# Download from: Google Cloud Console > APIs & Services > Credentials
# Create: OAuth 2.0 Client ID (Desktop app type)
credentials_file: google_credentials.json

# Service Account Configuration (if using service_account auth_method)
# service_account_file: service-account-key.json
# service_account_subject: admin@example.com  # Admin user to impersonate

# Token cache file (auto-generated after first OAuth authentication)
token_file: token.pickle

# Cloud Scheduler Configuration
scheduler:
  # Enable or disable automated syncs
  enabled: true
  
  # Schedule in cron format (default: every Monday at 9 AM)
  # Examples:
  # - "0 9 * * 1" = Every Monday at 9:00 AM
  # - "0 9 * * *" = Every day at 9:00 AM
  # - "0 9 * * 1,4" = Every Monday and Thursday at 9:00 AM
  # - "0 */6 * * *" = Every 6 hours
  schedule: "0 9 * * 1"
  
  # Timezone for schedule (default: Europe/London)
  timezone: "Europe/London"
  
  # Fixed email address for sync error notifications
  # This email will be added to a Log-Based Alert for scheduler failures
  error_notification_email: "osm-sync-errors@1stwarleyscouts.org.uk"

